    max-width: 100%;
    max-height: 87.5%;
    width: auto;
    height: auto;
    transition: transform 0.6s, opacity 0.6s;
    border-radius: 15px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.5);
    transform-style: preserve-3d;
}

.carousel-wrapper button {
