    display: flex;
    justify-content: center;
    gap: 2vw;
}

.bottom-buttons button {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
}

.bottom-buttons button img {
    width: 25vw;
    max-width: 75px;
    min-width: 18px;
    height: auto;
